@model IEnumerable<PROJ_RYAN.ViewModels.loginViewModel>

@{
    Layout = null;
}

<head>
    <!------ Include the above in your HEAD tag ---------->
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/js/bootstrap.min.js"></script>
    <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
    <!-- Include the above in your HEAD tag -->
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">
    <link href="~/Content/bootstrap-united.css" rel="stylesheet" />
</head>

<link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<link href="~/Content/Login.css" rel="stylesheet" />

<div class="container">
    <div class="row">                    
                <div class="modal-content" style="padding-left:10%;padding-right:-80%;padding-bottom:-20%;background-color:#bfe2f6">
                    <div class="">
                        <h1 class="lead" style="font-size: 300%; padding-bottom:10%;color:#0b0f78"> Dados Atuais </h1>
                    </div>
                    <div class="modal-body">
                        @foreach (var item in Model)
                        {
                        <h4 style="font-family:Bahnschrift;color:#000000;font-size:250%"> 
                        Olá @Html.DisplayFor(modelItem => item.nome). Dono do e-mail: @Html.DisplayFor(modelItem => item.login_email), cuja senha criptografada é: @Html.DisplayFor(modelItem => item.senha) 
                        </h4>
                        }
                    </div>
                    <div class="modal-footer">
                        @foreach (var item in Model)
                        {                        
                            @Html.ActionLink("Editar", "Edit", new { id = item.id_login }, new { @class = "btn btn-success", @style = "font-size:170%; width:1000%;" })
                            @Html.ActionLink("Voltar", "Index", new { id = item.id_login }, new { @class = "btn btn-info", @style = "font-size:170%; width:1000%;" })
                        }
                    </div>
                </div>
        </div>
</div>