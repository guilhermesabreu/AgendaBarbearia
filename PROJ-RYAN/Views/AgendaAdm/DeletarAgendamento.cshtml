@model PROJ_RYAN.Models.Agenda

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Schedule Cut</title>
    @*<link href="~/Content/Site.css" rel="stylesheet" type="text/css" />*@
    <link href="~/Content/Style.css" rel="stylesheet" />
    <link href="~/Content/grid.min.css" rel="stylesheet" />
    <link href="~/Content/Agenda.css" rel="stylesheet" />
</head>

<section class="container-fluid">
    <section class="row justify-content-center">
        <div class="col-12">

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.ClienteId)

                <div class="text-center"> Tem certeza que deseja deletar o agendamento ?</div>
                <div class="form-group">
                    <div class="text-center">
                        <input type="submit" value="Deletar" class="btn btn-default" style="background-color:red" />
                    </div>
                </div>
            }
        </div>
        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
            <script src="~/Scripts/jquery-3.3.1.min.js"></script>
        }
    </section>
</section>